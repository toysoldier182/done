
<div class="container mt-4">
  <div class="row">
    <div class="col-xs-10 col-sm-4 col-lg-4">
      <h2 class="mt-4">Create a new Todo</h2>
      <%= render "new"  %>
    </div>

    <div class="col-xs-10 col-sm-6 col-lg-8">
      <h1 class="mt-4">My Todo's</h1>

      <ul class="list-group">
        <% @todos.each do |todo| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.name %>
            <span class="badge badge-primary badge-pill"><%= todo.due_date %></span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10 col-sm-6">
    <p class="lead">Job Board:  <span><%= @wwr_feed.channel.title %></span></p>
    <ul>
      <% @wwr_feed.items.each do |item| %>
        <li>
          <%= link_to "#{item.link}" do %>
            <%= item.title %>
          <% end %>
        </li>

      <% end %>
    </ul>
    </div>

    <div class="col-10 col-sm-6">
    <p class="lead">Job Board:  Remote.OK <span> (<%= @remote_ok_jobs.count %> jobs)</span></p>
    <ul>
      <% @remote_ok_jobs.each do |job| %>

        <li>
          <%= link_to "https://remoteok.io/remote-jobs/#{job["slug"]}" do %>
            <%= job["company"] %>: <span><%= job["position"] %></span>
          <% end %>
        </li>
      <% end %>

    </ul>
    </div>
  </div>
</div>
